.container
    .row
        .page-header
            h1= title
            small Movie Type
.navbar.navbar-default.navbar-fixed-bottom
    .container
        .navbar-header
            a.navbar-brand(href="/") Movie
        if user
            p.navbar-text.navbar-right
                span= "Welcome " + user.name
                span &nbsp;|&nbsp;
                a.navbar-link(href="/user/logout") Sign out
        else
            p.navbar-text.navbar-right
                a.navbar-link(href="#", data-toggle="modal", data-target="#signupModal") Sign up
                span &nbsp;|&nbsp;
                a.navbar-link(href="#", data-toggle="modal", data-target="#signinModal") Sign in
#signupModal.modal.fade
    .modal-dialog
        .modal-content
            form(method="post",action="/user/signup")
                .modal-header
                    button.close(type="button",data-dismiss="modal",aria-hidden="true") &times;
                    h4.modal-title Sign up
                .modal-body
                    .form-group
                        label(for="signupName") Username
                        input#signupName.form-control(name="user[name]",type="text")
                    .form-group
                        label(for="signupPassword") Password
                        input#signupPassword.form-control(name="user[password]",type="password")
                .modal-footer
                    button.btn.btn-default(type="button",data-dismiss="modal") close
                    button.btn.btn-success(type="submit") submit
#signinModal.modal.fade
    .modal-dialog
        .modal-content
            form(method="post",action="/user/signin")
                .modal-header
                    button.close(type="button",data-dismiss="modal",aria-hidden="true") &times;
                    h4.model-title Sign in
                .modal-body
                    .form-group
                        label(for="signinName") Username
                        input#signinName.form-control(name="user[name]",type="text")
                    .form-group
                        label(for="signinPassword") Password
                        input#signinPassword.form-control(name="user[password]",type="password")
                .modal-footer
                    button.btn.btn-default(type="button",data-dismiss="modal") close
                    button.btn.btn-success(type="submit") submit


