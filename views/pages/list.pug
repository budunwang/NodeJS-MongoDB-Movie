extends ../layout

block content
    .container
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th Name
                        th Director
                        th Country
                        th Language
                        th Year
                        th Upload Time
                        th Check
                        th Update
                        th Delete
                    tbody
                        each item in movies
                            tr(class="item-id-"+item._id)
                                td= item.title
                                td= item.director
                                td= item.country
                                td= item.language
                                td= item.year
                                td= moment(item.meta.updateAt).format('MM/DD/YYYY')
                                td: a(target="_blank",href="/movie/"+item._id) check
                                td: a(target="_blank",href="/admin/movie/update/"+item._id) modify
                                td
                                    button.btn-danger.del(type="button", data-id=item._id) delete
    script(src="/javascripts/admin.js")
