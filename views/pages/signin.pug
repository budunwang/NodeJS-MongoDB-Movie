extends ../layout

block content
    .container
        .row
            .col-md-5
                form.form-horizontal(method="POST",action="/user/signin")
                    .modal-body
                        .form-group
                            label(for="signinName") Username
                            input#signinName.form-control(name="user[name]", type="text")
                        .form-group
                            label(for="signinPassword") Password
                            input#signinPassword.form-control(name="user[password]", type="password")
                    .modal-footer
                        button.btn.btn-default(type="button",data-dismiss="modal") close
                        button.btn.btn-success(type="submit") submit
